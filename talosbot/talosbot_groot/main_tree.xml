<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="main">
    <Sequence>
      <GetNextPoseHelper pos_x="{POS_X}"
                         pos_y="{POS_Y}"
                         quat_z="{QUAT_Z}"
                         quat_w="{QUAT_W}"
                         uuid="{UUID}"
                         locations="{LOCATIONS}"
                         post_action="{POST_ACTION}"
                         second_locations="{SECOND_LOCATIONS}"
                         second_post_action="{SECOND_POST_ACTION}"/>
      <Delay delay_msec="500">
        <RetryUntilSuccessful num_attempts="5">
          <TalosbotNavigateToPose goal_x="{POS_X}"
                                  goal_y="{POS_Y}"
                                  quat_z="{QUAT_Z}"
                                  quat_w="{QUAT_W}"
                                  action_name="/navigate_to_pose"/>
        </RetryUntilSuccessful>
      </Delay>
      <ForceSuccess>
        <Precondition else="FAILURE"
                      if="POST_ACTION == &apos;WAIT_5S&apos;">
          <TalosbotWait duration="5.0"
                        action_name="/talosbot_wait"/>
        </Precondition>
      </ForceSuccess>
      <ForceSuccess>
        <Precondition else="FAILURE"
                      if="POST_ACTION == &apos;WAIT_2S&apos;">
          <TalosbotWait duration="2"
                        action_name="/talosbot_wait"/>
        </Precondition>
      </ForceSuccess>
      <EndTaskHelper uuid="{UUID}"
                     status="SUCCESS"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="EndTaskHelper"
            editable="true">
      <input_port name="uuid"
                  default="abcd">Task UUID to end the task</input_port>
      <input_port name="status"
                  default="SUCCESS"/>
    </Action>
    <Action ID="GetNextPoseHelper"
            editable="true">
      <output_port name="pos_x"
                   default="{POS_X}"/>
      <output_port name="pos_y"
                   default="{POS_Y}"/>
      <output_port name="quat_z"
                   default="{QUAT_Z}"/>
      <inout_port name="quat_w"
                  default="{QUAT_W}"/>
      <output_port name="uuid"
                   default="{UUID}"/>
      <output_port name="locations"
                   default="{LOCATIONS}"/>
      <output_port name="post_action"
                   default="{POST_ACTION}">Things to do after completing goal</output_port>
      <output_port name="second_locations"
                   default="{SECOND_LOCATIONS}"/>
      <output_port name="second_post_action"
                   default="{SECOND_POST_ACTION}"/>
    </Action>
    <Action ID="TalosbotNavigateToPose"
            editable="true">
      <input_port name="goal_x"
                  default="{POS_X}"/>
      <input_port name="goal_y"
                  default="{POS_Y}"/>
      <input_port name="quat_z"
                  default="{QUAT_Z}"/>
      <input_port name="quat_w"
                  default="{QUAT_W}"/>
      <input_port name="action_name"
                  default="/navigate_to_pose"/>
    </Action>
    <Action ID="TalosbotWait"
            editable="true">
      <input_port name="duration"
                  default="2.0"/>
      <input_port name="action_name"
                  default="/talosbot_wait"/>
    </Action>
  </TreeNodesModel>

</root>
