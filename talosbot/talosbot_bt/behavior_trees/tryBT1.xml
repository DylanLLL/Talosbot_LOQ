<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="main">
    <Sequence>
      <TalosbotWait duration="0.2"
                    action_name="/talosbot_wait"/>
      <Timeout msec="3000">
        <TalosbotNavigateToPose goal_x="0.000"
                                goal_y="0.000"
                                quat_z="0.000"
                                quat_w="1.000"
                                action_name="/navigate_to_pose"/>
      </Timeout>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="TalosbotNavigateToPose"
            editable="true">
      <input_port name="goal_x"
                  default="{POS_X}"/>
      <input_port name="goal_y"
                  default="{POS_Y}"/>
      <input_port name="quat_z"
                  default="{QUAT_Z}"/>
      <input_port name="quat_w"
                  default="{QUAT_W}"/>
      <input_port name="action_name"
                  default="/navigate_to_pose"/>
    </Action>
    <Action ID="TalosbotWait"
            editable="true">
      <input_port name="duration"
                  default="0">Set talosbot to wait&#10;            </input_port>
      <input_port name="action_name"
                  default="/talosbot_wait"/>
    </Action>
  </TreeNodesModel>

</root>
