<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="main">
    <Sequence>
      <RetryUntilSuccessful num_attempts="10">
        <TalosbotNavigateToPose goal_x="0.800"
                                goal_y="-2.002"
                                quat_z="-0.667"
                                quat_w="0.745"
                                action_name="/talosbot_navigate_to_pose"/>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="TalosbotNavigateToPose"
            editable="true">
      <input_port name="goal_x"
                  default="{POS_X}"/>
      <input_port name="goal_y"
                  default="{POS_Y}"/>
      <input_port name="quat_z"
                  default="{QUAT_Z}"/>
      <input_port name="quat_w"
                  default="{QUAT_W}"/>
      <input_port name="action_name"
                  default="/talosbot_navigate_to_pose"/>
    </Action>
  </TreeNodesModel>

</root>
