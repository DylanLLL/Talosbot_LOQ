<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="main">
    <Sequence>
      <Fallback>
        <TalosbotCheckAreaClear check="true"
                                action_name="/talosbot_check_area_clear"/>
        <TalosbotMoveBaseAngular angle="90.0"
                                 action_name="/talosbot_move_base_angular"/>
        <TalosbotMoveBaseLinear dist="1.00"
                                action_name="/talosbot_move_base_linear"/>
        <TalosbotMoveBaseAngular angle="-90.0"
                                 action_name="/talosbot_move_base_angular"/>
        <Fallback>
          <TalosbotCheckAreaClear check="true"
                                  action_name="/talosbot_check_area_clear"/>
          <TalosbotMoveBaseLinear dist="1.0"
                                  action_name="/talosbot_move_base_linear"/>
          <TalosbotMoveBaseLinear dist="-1.0"
                                  action_name="/talosbot_move_base_linear"/>
          <AlwaysFailure/>
        </Fallback>
        <TalosbotMoveBaseLinear dist="1.0"
                                action_name="/talosbot_move_base_linear"/>
        <TalosbotMoveBaseLinear dist="-2.00"
                                action_name="/talosbot_move_base_linear"/>
        <TalosbotMoveBaseAngular angle="170.0"
                                 action_name="/talosbot_move_base_angular"/>
        <TalosbotMoveBaseLinear dist="1.00"
                                action_name="/talosbot_move_base_linear"/>
        <AlwaysSuccess/>
      </Fallback>
      <TalosbotMoveBaseLinear dist="1.00"
                              action_name="/talosbot_move_base_linear"/>
      <TalosbotMoveBaseLinear dist="-2.00"
                              action_name="/talosbot_move_base_linear"/>
      <TalosbotMoveBaseAngular angle="170.0"
                               action_name="/talosbot_move_base_angular"/>
      <TalosbotMoveBaseLinear dist="1.00"
                              action_name="/talosbot_move_base_linear"/>
      <AlwaysSuccess/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="TalosbotCheckAreaClear"
            editable="true">
      <input_port name="check"
                  default="true"/>
      <input_port name="action_name"
                  default="/talosbot_check_area_clear"/>
    </Action>
    <Action ID="TalosbotMoveBaseAngular"
            editable="true">
      <input_port name="angle"
                  default="0.00">Move Angular - Negative value for CW&#10;            </input_port>
      <input_port name="action_name"
                  default="/talosbot_move_base_angular"/>
    </Action>
    <Action ID="TalosbotMoveBaseLinear"
            editable="true">
      <input_port name="dist"
                  default="0.00">Move linear&#10;            </input_port>
      <input_port name="action_name"
                  default="/talosbot_move_base_linear"/>
    </Action>
  </TreeNodesModel>

</root>
